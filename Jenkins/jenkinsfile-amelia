        stage('Receive and Process JSON') {
            steps {
                script {
                    // Read the JSON payload from the HTTP request
                    def jsonPayload = env.JSON_PAYLOAD
                    
                    def data = readJSON text: jsonPayload
                    
                    data.each { record ->
                        def host = record.hostname
                        def ip = record.ip_address
                        
                        echo "Received host: $host, IP: $ip"
                        
                    }
                }
            }
        }	   
	   
	   
